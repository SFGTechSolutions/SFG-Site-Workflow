rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check authentication
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Tenant-scoped files
    match /tenants/{tenantId}/{allPaths=**} {
      // Allow read for authenticated users
      // In production, you'd validate tenant membership via custom claims
      allow read: if isAuthenticated();
      
      // Allow write for authenticated users (file size limit: 10MB)
      allow write: if isAuthenticated()
        && request.resource.size < 10 * 1024 * 1024
        && request.resource.contentType.matches('image/.*|application/pdf');
    }
    
    // Job attachments
    match /tenants/{tenantId}/jobs/{jobId}/attachments/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated()
        && request.resource.size < 10 * 1024 * 1024;
    }
    
    // Generated reports (PDFs)
    match /tenants/{tenantId}/reports/{reportId}/{fileName} {
      allow read: if isAuthenticated();
      // Only Cloud Functions should write reports
      allow write: if false;
    }
  }
}
